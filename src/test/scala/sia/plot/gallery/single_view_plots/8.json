{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": null,
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "timeUnit": "month",
      "field": "date",
      "type": "ordinal",
      "axis": {
        "title": "month of the year"
      }
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative"
    },
    "color": {
      "field": "weather",
      "type": "nominal",
      "scale": {
        "domain": ["sun","fog","drizzle","rain","snow"]
      },
      "legend": {"title": "weather type"}
    }
  }
}
