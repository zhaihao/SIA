{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": null,
  "transform": [
    {
      "filter": "datum.year == 2000"
    },
    {
      "calculate": "datum.sex == 2 ? 'Female' : 'Male'",
      "as": "gender"
    }
  ],
  "width": {
    "step": 12
  },
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "column": {
      "field": "age",
      "type": "ordinal",
      "spacing": 10
    },
    "y": {
      "aggregate": "sum",
      "field": "people",
      "type": "quantitative",
      "axis": {
        "title": "population",
        "grid": false
      }
    },
    "x": {
      "field": "gender",
      "type": "nominal",
      "axis": {
        "title": "",
        "labelAngle": -90
      }
    },
    "color": {
      "field": "gender",
      "type": "nominal",
      "scale": {
        "range": ["#EA98D2", "#659CCA"]
      }
    }
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "domainWidth": 1
    }
  }
}
